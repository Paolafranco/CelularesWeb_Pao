@model IEnumerable<DeberPrograPao1.Models.Celular>

@{
    ViewData["Title"] = "Index";
}

    <h1>Celulares</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var celular in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => celular.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => celular.Modelo)
                </td>
                <td>
                    <form action="celulares/comprar" method="post">
                        <div class="row">
                            <input name="id" type="hidden" value="@celular.Id" />
                            <input type="submit" value="Comprar" class="btn btn-success" />
                        </div>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@celular.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@celular.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@celular.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
