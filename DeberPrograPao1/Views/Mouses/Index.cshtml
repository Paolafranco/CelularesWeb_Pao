@model IEnumerable<DeberPrograPao1.Models.Mouse>

@{
    ViewData["Title"] = "Mouse";
}

    <h1>Mouses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var mouse in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => mouse.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => mouse.Modelo)
            </td>
            <td>
                <form action="mouses/comprar" method="post">
                    <div class="row">
                        <input name="id" type="hidden" value="@mouse.Id" />
                        <input type="submit" value="Comprar" class="btn btn-success" />
                    </div>
                </form>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@mouse.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@mouse.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@mouse.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
